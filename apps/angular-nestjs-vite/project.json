{
  "name": "angular-nestjs-vite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "angular-monorepo",
  "sourceRoot": "apps/angular-nestjs-vite/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}",
        "{workspaceRoot}/dist/client",
        "{workspaceRoot}/dist/server"
      ],
      "options": {
        "main": "apps/angular-nestjs-vite/src/main.ts",
        "configFile": "apps/angular-nestjs-vite/vite.config.ts",
        "logLevel": "info",
        "outputPath": "dist/apps/angular-nestjs-vite/client"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "angular-nestjs-vite:build",
        "port": 5200
      },
      "configurations": {
        "development": {
          "buildTarget": "angular-nestjs-vite:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "angular-nestjs-vite:build:production"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "angular-nestjs-vite:build"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/angular-nestjs-vite/**/*.{ts,html}"]
      }
    }
  }
}
